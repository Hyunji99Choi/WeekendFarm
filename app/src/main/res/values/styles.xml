<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--밀리터리 이미지 모니터링 페이지만 적용중-->
    <style name="AppTheme.NoActionBar.Material" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 모티러링 페이지 밀리터리 날씨별 -->
    <style name="AppTheme.NoActionBar.Material.Clear" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/weather_clear</item>
        <item name="colorPrimaryDark">#5E6717</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar.Material.Clode" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/weather_clode</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar.Material.Rain" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/weather_rain</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar.Material.Mist" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/weather_mist</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar.Material.Snow" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/weather_snow</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 앱바에 적용될 스타일 테마 -->
    <style name="AppTheme.Appbar">
        <item name="titleTextColor">@color/white</item>
        <!-- 액션바의 메뉴아이템들 색상 -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!--회원가입 toolbar -->


</resources>
